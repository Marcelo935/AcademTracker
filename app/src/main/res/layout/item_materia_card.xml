<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_algebra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardcolor"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/materia_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Materia"
                android:textAlignment="center"
                android:textSize="32dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_1_algebra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:text="Primer parcial"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_2_algebra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="Segundo parcial"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_3_algebra"
                    app:layout_constraintStart_toEndOf="@+id/tv_1_algebra"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_3_algebra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:text="Tercer parcial"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_algebra1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="1ยบ parcial"
                    app:layout_constraintEnd_toEndOf="@id/tv_1_algebra"
                    app:layout_constraintStart_toStartOf="@+id/tv_1_algebra"
                    app:layout_constraintTop_toBottomOf="@id/tv_1_algebra" />

                <EditText
                    android:id="@+id/et_algebra2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="2ยบ parcial"
                    app:layout_constraintEnd_toEndOf="@id/tv_2_algebra"
                    app:layout_constraintStart_toStartOf="@+id/tv_2_algebra"
                    app:layout_constraintTop_toBottomOf="@id/tv_2_algebra" />

                <EditText
                    android:id="@+id/et_algebra3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="3ยบ parcial"
                    app:layout_constraintEnd_toEndOf="@id/tv_3_algebra"
                    app:layout_constraintStart_toStartOf="@+id/tv_3_algebra"
                    app:layout_constraintTop_toBottomOf="@id/tv_3_algebra" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_algebra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_algebra" />
</androidx.constraintlayout.widget.ConstraintLayout>
