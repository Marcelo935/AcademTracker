<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de materias"
        android:textSize="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_insert_materia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar materia:"
        android:layout_marginTop="24dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_materia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Materia"
        app:layout_constraintTop_toBottomOf="@+id/tv_insert_materia" />

    <TextView
        android:id="@+id/tv_alumno_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:text="Registrar alumno:"
        app:layout_constraintTop_toBottomOf="@+id/et_materia"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_alumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Alumno"
        app:layout_constraintTop_toBottomOf="@+id/tv_alumno_nombre"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintTop_toBottomOf="@+id/et_alumno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>