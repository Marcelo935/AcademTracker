<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioBasico.ProfesorActivity">

    <!-- ImageView -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/imagen_2024_02_21_173132115"
        android:scaleType="centerCrop" />

    <!-- Director Text -->
    <TextView
        android:id="@+id/nombreprofe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFESOR"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Perfil Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/perfilbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Perfil"
        app:layout_constraintTop_toBottomOf="@id/nombreprofe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Lista de materias Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/materiasbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lista de materias"
        app:layout_constraintTop_toBottomOf="@id/perfilbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Calificaciones Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/califbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calificaciones"
        app:layout_constraintTop_toBottomOf="@id/materiasbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Asistencias Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/asistenciasbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Asistencias"
        app:layout_constraintTop_toBottomOf="@id/califbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/asistenciasregbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Ver Registro de asistencias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/califbtn"
        app:layout_constraintWidth_percent="0.8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/salirbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="LOGOUT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/asistenciasbtn"
        app:layout_constraintVertical_bias="0.931"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
