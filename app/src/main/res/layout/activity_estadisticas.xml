<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPrin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estadísticas de Rendimiento Académico"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Tarjeta de Predicciones -->
    <TextView
        android:id="@+id/tvPrediccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Predicciones..."
        android:textSize="16sp"
        android:textColor="#1A237E"
        android:padding="12dp"
        android:background="#E3F2FD"
        android:elevation="2dp"
        android:layout_marginBottom="8dp" />

    <!-- Tarjeta de Recomendaciones -->
    <TextView
        android:id="@+id/tvRecomendacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recomendaciones..."
        android:textSize="16sp"
        android:textColor="#004D40"
        android:padding="12dp"
        android:background="#E0F2F1"
        android:elevation="2dp"
        android:layout_marginBottom="8dp" />

    <!-- ScrollView para gráficas -->
    <ScrollView
        android:id="@+id/scrollViewGraf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/containerGraficas"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />
    </ScrollView>

</LinearLayout>
