<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".UpdatestudentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Secretariaimagealumno"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/noneuser"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/imagealumno"
                android:layout_alignTop="@id/imagealumno"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/SecretariaViewnombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/SecretariaViewemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/SecretariaViewgrado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grado"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/SecretariaViewgrupo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grupo"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>


        </LinearLayout>
        <Button
            android:id="@+id/SecretariabtnEliminarAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar Alumno"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</LinearLayout>